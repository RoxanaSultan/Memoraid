<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CardGameFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Matching Game"
        android:textSize="24sp"
        android:textColor="@color/blue"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Score -->
    <TextView
        android:id="@+id/score_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:text="Score: 0"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/game_title"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/timer_move_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/score_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/timer_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 00:00"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/move_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moves: 0"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <!-- Grid for displaying cards -->
    <GridLayout
        android:id="@+id/cards_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/timer_move_layout"
        app:layout_constraintBottom_toTopOf="@id/restart_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Button to restart or finish the game -->
    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:background="@drawable/button_selector"
        android:textColor="@drawable/foreground_color"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/winPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/layout_background"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:id="@+id/congratulationsMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations! \n You won!"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/green"
            android:layout_margin="20dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/closePopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/foreground_color"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/fireworks1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fireworks"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/winPopup"
        app:layout_constraintEnd_toStartOf="@id/fireworks2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/fireworks2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/fireworks"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/winPopup"
        app:layout_constraintStart_toEndOf="@id/fireworks1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"  />

    <ImageView
        android:id="@+id/fireworks3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/fireworks"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/winPopup"
        app:layout_constraintEnd_toStartOf="@id/fireworks4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/fireworks4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fireworks"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/winPopup"
        app:layout_constraintStart_toEndOf="@id/fireworks3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

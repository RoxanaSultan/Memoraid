<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/new_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/confirm_new_password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textColorHint="@color/blue"
        android:textColor="@color/blue"
        android:hint="New password"
        android:background="@drawable/edit_text_box"
        app:layout_constraintVertical_chainStyle="packed"/>

    <EditText
        android:id="@+id/confirm_new_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColorHint="@color/blue"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_password"
        app:layout_constraintBottom_toTopOf="@id/save_new_password_button"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="Confirm new password"
        android:background="@drawable/edit_text_box"/>

    <android.widget.Button
        android:id="@+id/save_new_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_new_password"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="13dp"
        android:background="@drawable/button_selector"
        android:textColor="@drawable/foreground_color"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
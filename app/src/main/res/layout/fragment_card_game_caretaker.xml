<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CardGameCaretakerFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's see the statistic"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@drawable/foreground_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <!-- Game Rules -->
    <TextView
        android:id="@+id/gameRules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/card_match_description_caretaker"
        android:textSize="16sp"
        android:textColor="@drawable/foreground_color"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textAlignment="center"/>

    <!-- Total Games Played -->
    <TextView
        android:id="@+id/totalGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total games played: "
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/gameRules"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@drawable/foreground_color"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/totalGamesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/gameRules"
        app:layout_constraintStart_toEndOf="@id/totalGames"
        android:textColor="@drawable/foreground_color"
        android:textStyle="bold"/>

    <!-- Levels Table Title -->
    <TextView
        android:id="@+id/levelsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics per level"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/totalGames"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@drawable/foreground_color"
        android:textStyle="bold"/>

    <!-- TableLayout for Levels -->
    <TableLayout
        android:id="@+id/levelsTableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/levelsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:stretchColumns="1">

        <!-- Table Header Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Level"
                android:textColor="@drawable/foreground_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total\nGames"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@drawable/foreground_color"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Best\nScore"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@drawable/foreground_color"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Least\nMoves"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@drawable/foreground_color"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Best\nTime"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@drawable/foreground_color"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total\nScore"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@drawable/foreground_color"
                android:textStyle="bold"
                android:gravity="center"/>
        </TableRow>

        <!-- Table Rows will be added dynamically here -->

    </TableLayout>

    <!-- Weekly Activity Button -->
    <Button
        android:id="@+id/weeklyActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Activity"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/levelsTableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@drawable/foreground_color"
        android:background="@drawable/button_selector"/>

</androidx.constraintlayout.widget.ConstraintLayout>

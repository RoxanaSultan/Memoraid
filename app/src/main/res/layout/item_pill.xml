<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/data_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <!-- Linia pentru Numele programării -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pillLabelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/pillName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Linia pentru Doctor -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pillLabelDose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dose:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/pillDose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dose"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Linia pentru Locație -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pillLabelNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/pillNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Linia pentru Ora -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pillLabelTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/pillTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pillLabelTaken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taken:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            <CheckBox
                android:id="@+id/pillCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

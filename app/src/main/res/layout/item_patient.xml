<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Checkbox for selecting the patient -->
    <CheckBox
        android:id="@+id/checkboxPatientSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5" /> <!-- Center vertically -->

    <!-- Patient's profile picture -->
    <ImageView
        android:id="@+id/patientProfilePicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_profile_picture"
        app:layout_constraintStart_toEndOf="@id/checkboxPatientSelect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintVertical_bias="0.5" /> <!-- Center vertically -->

    <!-- Patient's username label -->
    <TextView
        android:id="@+id/patientUsernameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/patientProfilePicture"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintVertical_bias="0.5" /> <!-- Center vertically -->

    <!-- Patient's username -->
    <TextView
        android:id="@+id/patientUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/patientUsernameBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/patientUsernameBox"
        android:layout_marginLeft="10dp"
        app:layout_constraintVertical_bias="0.5" /> <!-- Center vertically -->

    <!-- Patient's name label -->
    <TextView
        android:id="@+id/patientNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/patientProfilePicture"
        app:layout_constraintTop_toBottomOf="@id/patientUsernameBox"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp" />

    <!-- Patient's name -->
    <TextView
        android:id="@+id/patientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/patientNameBox"
        app:layout_constraintTop_toBottomOf="@id/patientUsername"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

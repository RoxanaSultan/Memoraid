<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Titlu sus -->
    <TextView
        android:id="@+id/title_troubles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problems connecting?"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/blue" />

    <!-- Subtitlu -->
    <TextView
        android:id="@+id/subtitle_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your username, email address, phone number and we'll send you a link to regain access to your account."
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:layout_marginTop="20dp" />

    <!-- EditText pentru input -->
    <EditText
        android:id="@+id/input_credential"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username, Email or Phone Number"
        android:textColorHint="@color/blue"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:inputType="text"
        android:background="@drawable/edit_text_box"
        android:layout_marginTop="20dp"
        android:padding="12dp" />

    <!-- Butonul Send connection link -->
    <Button
        android:id="@+id/send_link_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send connection link"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:background="@drawable/button_selector"
        android:textColor="@drawable/foreground_color" />

    <!-- Text Something didn't work? -->
    <TextView
        android:id="@+id/text_something_wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Something didn't work?"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:layout_marginTop="20dp" />

    <!-- Buton Go back to login page -->
    <Button
        android:id="@+id/go_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back to login page"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/button_selector"
        android:textColor="@drawable/foreground_color" />

</LinearLayout>
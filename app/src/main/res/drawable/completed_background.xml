<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Default background color -->
            <stroke android:width="3dp" android:color="@color/gray"/> <!-- Border color and width -->
            <corners android:radius="8dp"/> <!-- Corner radius -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</selector>
